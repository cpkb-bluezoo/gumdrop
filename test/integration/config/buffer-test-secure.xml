<?xml version='1.0' standalone='yes'?>
<gumdrop>
    <!-- Secure (TLS) buffer test server on port 19443 -->
    <server id="bufferTestSecure" class="org.bluezoo.gumdrop.buffer.BufferTestServer">
        <property name="port">19443</property>
        <property name="addresses">127.0.0.1</property>
        <property name="secure">true</property>
        <property name="keystore-file">testkeystore.p12</property>
        <property name="keystore-pass">changeit</property>
        <!-- Message pattern is set programmatically in tests -->
    </server>
</gumdrop>
