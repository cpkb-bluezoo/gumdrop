<?xml version='1.0' standalone='yes'?>
<!--
  SMTP Client integration test configuration.
  
  This configuration sets up both SMTP and SMTPS servers for testing
  Gumdrop's SMTP client implementation, including:
  - Basic SMTP session (EHLO, MAIL FROM, RCPT TO, DATA, QUIT)
  - STARTTLS upgrade
  - SMTPS (implicit TLS)
  - SASL authentication (PLAIN, LOGIN)
  - Multiple messages per session
  - RSET command
  
  Both listeners use an AcceptAllService that accepts all messages
  and captures them for verification.
-->
<gumdrop>
    <!-- Accept-all SMTP service with SMTP and SMTPS listeners -->
    <service id="acceptAllService" class="org.bluezoo.gumdrop.smtp.client.AcceptAllService">
        <!-- SMTP (plaintext with STARTTLS) listener on port 18025 -->
        <listener class="org.bluezoo.gumdrop.smtp.SMTPListener"
                  name="smtp" port="18025" addresses="127.0.0.1"
                  keystore-file="test/integration/certs/test-keystore.p12"
                  keystore-pass="testpass"/>
        <!-- SMTPS (implicit TLS) listener on port 18465 -->
        <listener class="org.bluezoo.gumdrop.smtp.SMTPListener"
                  name="smtps" port="18465" addresses="127.0.0.1"
                  secure="true"
                  keystore-file="test/integration/certs/test-keystore.p12"
                  keystore-pass="testpass"/>
    </service>
</gumdrop>

