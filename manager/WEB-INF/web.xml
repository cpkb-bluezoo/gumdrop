<web-app version='2.4'>

  <display-name>Manager</display-name>
  <description>Servlet context administration facility</description>

  <servlet>
    <servlet-name>Manager</servlet-name>
    <servlet-class>org.bluezoo.gumdrop.servlet.ManagerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Manager</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Manager</servlet-name>
    <url-pattern>/reload</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Manager</servlet-name>
    <url-pattern>/thread-count</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>
