<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Example JSP Configuration</display-name>
    <description>
        Example web.xml showing manual JSP servlet configuration.
        Note: Gumdrop automatically configures JSP processing by default.
        Only use manual configuration if you need custom settings.
    </description>

    <!-- Custom JSP Servlet Configuration (Optional) -->
    <!-- Remove this section to use Gumdrop's automatic JSP configuration -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.bluezoo.gumdrop.servlet.jsp.JSPServlet</servlet-class>
        <description>JSP Servlet for processing JavaServer Pages</description>
        <load-on-startup>3</load-on-startup>
        
        <!-- Optional init parameters for JSP servlet -->
        <init-param>
            <param-name>development</param-name>
            <param-value>true</param-value>
            <description>Enable development mode for JSP recompilation</description>
        </init-param>
    </servlet>

    <!-- JSP Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jspx</url-pattern>
    </servlet-mapping>

    <!-- Optional: Map specific directories to JSP servlet -->
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>/templates/*</url-pattern>
    </servlet-mapping>

    <!-- JSP Configuration -->
    <jsp-config>
        <!-- Default JSP settings for all JSP files -->
        <jsp-property-group>
            <display-name>Default JSP Settings</display-name>
            <url-pattern>*.jsp</url-pattern>
            <url-pattern>*.jspx</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
            <default-content-type>text/html; charset=UTF-8</default-content-type>
            <buffer>8kb</buffer>
        </jsp-property-group>

        <!-- Secure JSP settings - disable scripting in admin area -->
        <jsp-property-group>
            <display-name>Admin Area Security</display-name>
            <url-pattern>/admin/*.jsp</url-pattern>
            <url-pattern>/secure/*.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>

        <!-- Template JSP settings - include common header/footer -->
        <jsp-property-group>
            <display-name>Template Processing</display-name>
            <url-pattern>/templates/*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/WEB-INF/includes/template-header.jsp</include-prelude>
            <include-coda>/WEB-INF/includes/template-footer.jsp</include-coda>
        </jsp-property-group>

        <!-- API JSP settings - XML content type -->
        <jsp-property-group>
            <display-name>API Response JSPs</display-name>
            <url-pattern>/api/*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <default-content-type>application/xml; charset=UTF-8</default-content-type>
        </jsp-property-group>

        <!-- Tag Library Descriptors -->
        <taglib>
            <taglib-uri>http://example.com/tags/custom</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom-tags.tld</taglib-location>
        </taglib>

        <taglib>
            <taglib-uri>http://example.com/tags/utils</taglib-uri>
            <taglib-location>/WEB-INF/tld/utility-tags.tld</taglib-location>
        </taglib>
    </jsp-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/exception.jsp</location>
    </error-page>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <name>JSESSIONID</name>
            <secure>false</secure>
            <http-only>true</http-only>
        </cookie-config>
    </session-config>

    <!-- Security Configuration (Example) -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin JSPs</web-resource-name>
            <url-pattern>/admin/*.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Admin Area</realm-name>
    </login-config>

    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <!-- MIME Type Mappings for JSP-related files -->
    <mime-mapping>
        <extension>jsp</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>jspx</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>

</web-app>
