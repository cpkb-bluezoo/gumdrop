<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>OAuth 2.0 Servlet Authentication Example</display-name>
    <description>
        Demonstrates OAuth 2.0 authentication integration with Gumdrop servlet container.
        This example shows token introspection, scope-based authorization, and role mapping.
    </description>

    <!-- Context initialization for OAuth configuration -->
    <listener>
        <listener-class>com.example.oauth.OAuth2ConfigurationListener</listener-class>
    </listener>

    <!-- OAuth 2.0 Authentication Configuration -->
    <login-config>
        <auth-method>OAUTH</auth-method>
        <realm-name>MyOAuthRealm</realm-name>
    </login-config>

    <!-- Protected API endpoints requiring authentication -->
    <security-constraint>
        <display-name>Protected API Resources</display-name>
        <web-resource-collection>
            <web-resource-name>API Endpoints</web-resource-name>
            <description>All API endpoints require OAuth authentication</description>
            <url-pattern>/api/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>PATCH</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>Authenticated users with read access</description>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Admin-only endpoints -->
    <security-constraint>
        <display-name>Admin API Resources</display-name>
        <web-resource-collection>
            <web-resource-name>Admin Endpoints</web-resource-name>
            <description>Admin-only API endpoints</description>
            <url-pattern>/api/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>PATCH</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>Admin users only</description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Public endpoints (no authentication required) -->
    <security-constraint>
        <display-name>Public Resources</display-name>
        <web-resource-collection>
            <web-resource-name>Public Content</web-resource-name>
            <description>Publicly accessible content</description>
            <url-pattern>/public/*</url-pattern>
            <url-pattern>/health</url-pattern>
            <url-pattern>/version</url-pattern>
        </web-resource-collection>
        <!-- No auth-constraint means public access -->
    </security-constraint>

    <!-- Security roles used by the application -->
    <security-role>
        <description>Regular application users with read/write access</description>
        <role-name>user</role-name>
    </security-role>

    <security-role>
        <description>Administrative users with full access</description>
        <role-name>admin</role-name>
    </security-role>

    <security-role>
        <description>Content moderators with moderation privileges</description>
        <role-name>moderator</role-name>
    </security-role>

    <!-- Test servlet for OAuth authentication -->
    <servlet>
        <servlet-name>OAuthTestServlet</servlet-name>
        <servlet-class>com.example.oauth.OAuthTestServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>OAuthTestServlet</servlet-name>
        <url-pattern>/api/test</url-pattern>
    </servlet-mapping>

    <!-- Admin test servlet -->
    <servlet>
        <servlet-name>AdminTestServlet</servlet-name>
        <servlet-class>com.example.oauth.AdminTestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminTestServlet</servlet-name>
        <url-pattern>/api/admin/test</url-pattern>
    </servlet-mapping>

    <!-- Public health check servlet -->
    <servlet>
        <servlet-name>HealthServlet</servlet-name>
        <servlet-class>com.example.oauth.HealthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HealthServlet</servlet-name>
        <url-pattern>/health</url-pattern>
    </servlet-mapping>

    <!-- Error pages for authentication/authorization failures -->
    <error-page>
        <error-code>401</error-code>
        <location>/error/unauthorized.html</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/error/forbidden.html</location>
    </error-page>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 minutes -->
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure> <!-- Set to false for local development over HTTP -->
        </cookie-config>
    </session-config>

</web-app>
