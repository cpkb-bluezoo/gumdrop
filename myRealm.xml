<!--
  Simple static realm info for BasicRealm.
  
  Groups are defined with:
    - id: XML ID for referencing via IDREFS
    - name: The actual role name used in authorization checks
  
  Users reference groups by id in the 'groups' attribute (space-separated IDREFS).
-->
<realm>
  <!-- Define groups: id is for linking, name is the role for authorization -->
  <group id="adminGroup" name="Admin"/>
  <group id="editorGroup" name="Editors"/>
  <group id="managerGroup" name="manager"/>

  <!-- Define users with their group memberships -->
  <user name="admin" password="admin" groups="adminGroup editorGroup managerGroup"/>
  <user name="editor" password="editor" groups="editorGroup"/>
</realm>
